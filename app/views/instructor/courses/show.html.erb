<br />
<div class="booyah-box col-xs-offset-1 col-xs-10">
	<h1 class="text-center"><%= @course.title %></h1>
	<br />
	<%= link_to 'Preview as a Student', course_path(@course), :class => 'btn btn-warning pull-right' %>
	<div class="clear"></div>
	<div class="text-center">
		<%= link_to 'Add a new Section', new_instructor_course_section_path(@course), :class => 'btn btn-primary btn-large' %>
	</div>
	<ul>
		<% @course.sections.each do |section| %>
		<li>
			<%= section.title %>
		</li>
		<% end %>
	</ul>
</div>