<br />

<div class="booyah-box col-xs-offset-1 col-xs-10">
	<h1><%= @course.title %></h1>
	<%= image_tag @course.image, :class => 'img-responsive' %>
	<br />
	<div class="col-sm-4 col-xs-12 text-center">
		<span class="label label-default">
			<%= number_to_currency @course.cost %>
		</span>
		<% if current_user && current_user == @course.user %>
			<br /><br />
			<%= link_to 'Administration', instructor_course_path(@course), :class => 'btn btn-danger btn-large' %>
		<% end %>
	</div>
	<div class="col-sm-4 col-xs-12">
		<%= @course.description %>
	</div>
	<div class="col-xs-12">
		<% @course.sections.each do |section| %>
			<br /><br />
			<div class="section">
				<h3>
					<%= section.title %>
				</h3>
				<% section.lessons.each do |lesson| %>
				<div class="col-xs-12 col-sm-6">
					<div class="lesson text-centered">
						<br />
						<%= link_to lesson_path(lesson) do %>
							<b><%= lesson.title %></b>
							<br />
							<%= lesson.subtitle %>
						<% end %>
					</div>
				</div>
				<% end %>
				<div class="clear"></div>
			</div>
		<% end %>
	</div>
</div>